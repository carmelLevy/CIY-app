<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cute_fridge"
    tools:context=".BottomNavigationBar">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ingredientsRecyclerView"
        app:layout_behavior="appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layoutAnimation="@anim/layout_animation"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fridgeDoorsOpen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="open_fridge_anim.json"
        app:lottie_loop="false"
        app:lottie_speed="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/enterIngredients"
        android:scaleType="center" />

</RelativeLayout>

